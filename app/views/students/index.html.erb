
<div class="panel panel-default">
  <form action="/cities" method="get">
    name<input type="text" id="name" name="name" value="<%= params[:name] %>">
    <input type="submit" name="" value="搜索">
  </form>
  <div class="panel-heading">
    学生列表
    <div class="pull-right">
      <%= link_to "新建学生信息", new_student_path, class: "btn btn-primary btn-xs" %>
    </div>
  </div>
  <div class="table-responsive">
    <table style="table-layout:fixed" class="table table-striped b-t b-light">
      <thead>
        <tr>
          <th width="10%">学号</th>
          <th >姓名</th>
          <th width="10%">身份证</th>
          <th>性别</th>
          <th width="10%">电话号码</th>
          <th >电话所属</th>
          <th >备注</th>
          <th >创建时间</th>
          <th >操作</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student|%>
        <tr>         
          <td><%= student.number %></td>
          <td><%= student.name %></td>
          <td style="overflow:hidden;white-space:nowrap;text-overflow:ellipsis;"><%= student.id_card %></td>
          <% if student.sex == 1%>
          <td>男</td>
          <% else student.sex == 2%>
          <td>女</td>
          <% end %>
          <td><%= student.mobile %></td>
          <td><%= student.mobile_own %></td>
          <td><%= student.remark %></td>
          <td><%= student.created_at.strftime("%F %T") %></td>
          <td>
            <%= link_to "查看", student, class: "btn btn-default btn-xs" %>
            <%= link_to "修改", edit_student_path(student), class: "btn btn-default btn-xs" %>
            <%= link_to "删除", student, method: :delete,  data: { confirm: '确定删除吗?' } ,class: "btn btn-danger btn-xs" %>
          </td>   
        </tr>
        <% end %>
      </tbody>
    </table>
    <footer class="panel-footer">
      <%#= render partial: "shared/admin/paginate", locals: { object: @cities} %>
    </footer>
  </div>
